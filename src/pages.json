{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^u-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    // pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    // path 必须与 src 下路径一致，蠢的要死
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/readme/index",
      "style": {
        "navigationBarTitleText": "简介（TODO 小程序富文本样式控制）"
      },
      "needLogin": false
    },
    {
      "path": "pages/download-progress/index",
      "style": {
        "navigationBarTitleText": "下载进度条"
      }
    },
    {
      "path": "pages/map-info/index",
      "style": {
        "navigationBarTitleText": "地图功能验证"
      }
    },
    {
      "path": "pages/markdown-ast/index",
      "style": {
        "navigationBarTitleText": "基于 ast 转换 markdown"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
